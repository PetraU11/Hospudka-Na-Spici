    <link rel="icon" type="image/png" sizes="16x16" href="/images/favicon_io/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <title> {{title}} </title>
</head>

<body>

    <header class="header"> 
        <div class="header__container">
          <div class="header__subcontainer"> 
        <img class="header__logo" src="/images/main-logo.png" alt="Logo">
        <h1 class="header__heading"> Hospůdka <br> Na Špici</h1>
          </div>

        <nav class="menu">

          <input type="checkbox" class="menu__checkbox" id="menu-checkbox">
          <label for="menu-checkbox" class="menu__toggler">
            <div class="hamburger">
              <span class="bar">  </span>
              <span class="bar"> </span>
              <span class="bar"> </span>
             </div>
          </label>
      
            {% include 'partials_menu.njk'%}

            </nav>
           </div>
    
     </header>


<main class="main"> 

     <img class="main__logo-top" src="/images/main-logo.png" alt="Logo">

     <a class="button{{ ' active' if page.fileSlug === ''}}" href="/"> <span class="span__homepage"> Úvod </span></a>
     <a class="button{{ ' active' if page.fileSlug === 'about'}}"href="/about/"> <span class="span__about"> O nás </span></a>
     <a class="button{{ ' active' if page.fileSlug === 'events'}}"  href="/events/"> <span class="span__events"> Aktuality & Akce </span></a> 
     <a class="button{{ ' active' if page.fileSlug === 'booking'}}" href="/booking/"> <span class="span__booking"> Rezervace </span> </a> 
     <a class="button{{ ' active' if page.fileSlug === 'drinks'}}" href="/drinks/"> <span class="span__drinks"> Nápojový lístek</span></a> 
     <a class="button{{ ' active' if page.fileSlug === 'catering'}}" href="/catering/"> <span class="span__catering"> Catering </span></a>
    
     
      <img class="main__logo-bottom" src="/images/main-logo.png" alt="Logo">
     
     
<!-- <img class="article__photo" src="/images/{{photo}}" alt="{{alt}}"> -->

<a class="back-button" href=/events/> <span> Zpět <span> </a> 

<h2 class="article__title"> {{title}} </h2>

<p class="article__perex"> {{perex}} </p> 

<!-- <p class="article__meta"> Publikováno {{page.date.toLocaleString('cs-CZ')}} <p> -->

<div class="article__content">


{{content|safe}}


</div> 


        </main>
        



      <footer class="footer">
          <div class="footer__payment"> 
            Možnosti platby: 
